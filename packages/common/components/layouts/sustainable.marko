                    <!-- Advertisement 1 START --> 

                    
                    
                    <!-- Advertisement 1 END -->
             
                    <!-- Line Divider START --> 
                    <common-sustainable-divider-block />
                    <!-- Line Divider END -->
             
                    <!-- Article 1 START -->  
                    <common-sustainable-content-block 
                      newsletter=newsletter
                      date=date
                      section-name="Article"
                      limit=1
                    />
                    <!-- Article 1 END -->
             
                    <!-- Line Divider START --> 
                    <common-sustainable-divider-block />
                    <!-- Line Divider END -->

                    <!-- Subscription Enticement START --> 
                    <common-sustainable-native-ad-block
